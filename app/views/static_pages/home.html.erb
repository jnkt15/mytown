<% if logged_in? %>
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <h3>みんなの投稿 (<%= @feed_items.count %>)</h3>
        <%= render 'shared/feed' %>
      </div>
      <div class="col-md-3">
        <p><%= link_to "投稿する", new_post_path, class: "btn btn-primary btn-lg btn-record" %></p>
  	  </div>
    </div>
  </div>
<% else %>
  <center>
    <h1>My Townへようこそ！</h1>
    <h2>あなたの町のおすすめを紹介しませんか？</h2>
    <p>町の魅力を再発見！</p>
  </center>
<% end %>